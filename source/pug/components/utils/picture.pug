mixin picture(path, image, format, width, height, altText, desktop, tablet)
  picture(class!=attributes.class)
    if (desktop)
      source(type='image/webp', media="(min-width: " + desktop + "px)", srcset="img/" + path + "/" + image + "-desktop.webp" + ", " + "img/" + path + "/" + image + "-desktop@2x.webp" + " 2x")
    if (tablet)
      source(type='image/webp', media="(min-width: " + tablet + "px)", srcset="img/" + path + "/" + image + "-tablet.webp" + ", " + "img/" + path + "/" + image + "-tablet@2x.webp" + " 2x")
    source(type='image/webp', srcset="img/" + path + "/" + image + ".webp" + ", " + "img/" + path + "/" + image + "@2x.webp" + " 2x")
    if (desktop)
      source(media="(min-width: " + desktop + "px)", srcset="img/" + path + "/" + image + `-desktop.${format}` + ", " + "img/" + path + "/" + image + `-desktop@2x.${format}` + " 2x")
    if (tablet)
      source(media="(min-width: " + tablet + "px)", srcset="img/" + path + "/" + image + `-tablet.${format}` + ", " + "img/" + path + "/" + image + `-tablet@2x.${format}` + " 2x")
    img(src="img/" + path + "/" + image + "." + format, srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", width= width, height= height, alt= altText)
